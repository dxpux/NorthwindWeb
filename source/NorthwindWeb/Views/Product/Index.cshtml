@{
    ViewBag.Title = "產品管理";
}
<div id="productApp" >
    <!--清單頁面-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-right">
                <a href="#newItemDataPage" type="button" role="button" data-toggle="modal" class="btn btn-primary" v-on:click="newClick">新增產品</a>
            </div>
            <h1>產品管理</h1>
        </div>
        <div class="panel-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>商品名稱</th>
                                    <th>庫存單位量</th>
                                    <th>訂貨單位量</th>
                                    <th>單位數量</th>
                                    <th>單位價格</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="product in products">
                                    <td>{{product.ProductName}}<span v-show="product.Discontinued">[停用]</span></td>
                                    <td>{{product.UnitsInStock}}</td>
                                    <td>{{product.UnitsOnOrder}}</td>
                                    <td>{{product.QuantityPerUnit}}</td>
                                    <td>{{product.UnitPrice}}</td>
                                    <td>
                                        <a href="#updateItemDataPage" type="button" role="button" data-toggle="modal" class="btn btn-primary" v-show="!product.Discontinued" v-on:click="modifyClick(product)">修改</a>
                                        <button type="button" class="btn btn-danger" v-show="!product.Discontinued" v-on:click="discontinuedClick(product)">停用</button>
                                        <button type="button" class="btn btn-danger" v-show="product.Discontinued" v-on:click="continuedClick(product)">複用</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--新增畫面-->
    <div class="modal fade" id="newItemDataPage" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="form-horizontal" v-on:submit.prevent="onAddSubmit">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            ×
                        </button>
                        <h4 class="modal-title">
                            新增產品
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            產品名稱
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" v-model="addProduct.ProductName" required/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label required">
                                            單位數量
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" v-model="addProduct.QuantityPerUnit" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label required">
                                            類型
                                        </label>
                                        <div class="col-sm-10">
                                            <select class="form-control valid no-padding-top" v-model="addProduct.CategoryID">
                                                <option v-for="cat in categories" v-bind:value="cat.CategoryID">{{cat.CategoryName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            供應商
                                        </label>
                                        <div class="col-sm-10">
                                            <select class="form-control valid no-padding-top" v-model="addProduct.SupplierID">
                                                <option v-for="sup in suppliers" v-bind:value="sup.SupplierID">{{sup.CompanyName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            價格
                                        </label>
                                        <div class="col-sm-10">
                                            <input type=number step=0.01 class="form-control" v-model="addProduct.UnitPrice" min="0" max="999999999" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">
                            確認
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--修改畫面-->
    <div id="updateItemDataPage" role="dialog" class="modal fade" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="form-horizontal" v-on:submit.prevent="onModifySubmit">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            x
                        </button>
                        <h4 class="modal-title">
                            修改產品
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            產品名稱
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" v-model="modifyProduct.ProductName" required/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            單位數量
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" v-model="modifyProduct.QuantityPerUnit" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            類型
                                        </label>
                                        <div class="col-sm-10">
                                            <select class="form-control valid no-padding-top" v-model="modifyProduct.CategoryID">
                                                <option v-for="cat in categories" v-bind:value="cat.CategoryID">{{cat.CategoryName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            供應商
                                        </label>
                                        <div class="col-sm-10">
                                            <select class="form-control valid no-padding-top" v-model="modifyProduct.SupplierID">
                                                <option v-for="sup in suppliers" v-bind:value="sup.SupplierID">{{sup.CompanyName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            價格
                                        </label>
                                        <div class="col-sm-10">
                                            <input type=number step=0.01 class="form-control" v-model="modifyProduct.UnitPrice" min="0" max="999999999" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">
                            確認
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="http://cdnjs.cloudflare.com/ajax/libs/vue/2.0.0-rc.1/vue.min.js"></script>
    <script>
        var apiPost = function (url, data, success) {
            $.ajax({
                type: "POST",
                url: url,
                data: data,
                headers: {
                    'RequestVerificationToken': '@CommonRazorFunction.GetAntiForgeryToken()',
                },
                success: success,
                error: function () {
                    alert('api 通訊失敗');
                }
            })
        }

        var vm = new Vue({
            el: '#productApp',
            data: {
                products: [],
                categories: [],
                suppliers: [],
                addProduct: { ProductName: "", SupplierID: 1, CategoryID: 1, QuantityPerUnit: "", UnitPrice: 0 },
                modifyProduct: { ProductID: 0, ProductName: "", SupplierID: 1, CategoryID: 1, QuantityPerUnit: "", UnitPrice: 0 }
            },
            methods: {
                refreshProducts: function () {
                    apiPost(
                        '@Url.Action("JsonGetProducts", "Product")',
                        null,
                        function (data) {
                            if (data.Success == true) {
                                vm.products = data.Data;
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                refreshSuppliers: function () {
                    apiPost(
                        '@Url.Action("JsonGetSuppliers", "Product")',
                        null,
                        function (data) {
                            if (data.Success == true) {
                                vm.suppliers = data.Data;
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                refreshCategories: function () {
                    apiPost(
                        '@Url.Action("JsonGetCategories", "Product")',
                        null,
                        function (data) {
                            if (data.Success == true) {
                                vm.categories = data.Data;
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                newClick: function () {
                    vm.addProduct.ProductName = "";
                    vm.addProduct.QuantityPerUnit = "";
                    vm.addProduct.CategoryID = vm.categories[0].CategoryID;
                    vm.addProduct.SupplierID = vm.suppliers[0].SupplierID;
                    vm.addProduct.UnitPrice = 0
                },
                onAddSubmit: function () {
                    apiPost(
                        '@Url.Action("JsonAddProduct", "Product")',
                        vm.addProduct,
                        function (data) {
                            if (data.Success == true) {
                                vm.refreshProducts();
                                $('#newItemDataPage').modal('hide');
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                modifyClick: function (product) {
                    vm.modifyProduct.ProductID = product.ProductID;
                    vm.modifyProduct.ProductName = product.ProductName;
                    vm.modifyProduct.QuantityPerUnit = product.QuantityPerUnit;
                    vm.modifyProduct.CategoryID = product.CategoryID;
                    vm.modifyProduct.SupplierID = product.SupplierID;
                    vm.modifyProduct.UnitPrice = product.UnitPrice;
                },
                onModifySubmit: function () {
                    apiPost(
                        '@Url.Action("JsonModifyProduct", "Product")',
                        vm.modifyProduct,
                        function (data) {
                            if (data.Success == true) {
                                vm.refreshProducts();
                                $('#updateItemDataPage').modal('hide');
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                discontinuedClick: function (product) {
                    apiPost(
                        '@Url.Action("JsonDiscontinuedProduct", "Product")',
                        { productID: product.ProductID },
                        function (data) {
                            if (data.Success == true) {
                                vm.refreshProducts();
                            } else {
                                alert(data.Message);
                            }
                        });
                },
                continuedClick: function (product) {
                    apiPost(
                        '@Url.Action("JsonContinuedProduct", "Product")',
                        { productID: product.ProductID },
                        function (data) {
                            if (data.Success == true) {
                                vm.refreshProducts();
                            } else {
                                alert(data.Message);
                            }
                        });
                }
            },
            mounted: function () {
                this.refreshProducts();
                this.refreshCategories();
                this.refreshSuppliers();
            }
        });
    </script>
}